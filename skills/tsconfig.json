{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": false,
    "outDir": "./dist",
    "rootDir": ".",
    "declaration": false,
    "noImplicitAny": false
  },
  "include": ["**/*.ts"],
  "exclude": ["dist"]
}
