{
  "cron_routing": {
    "data-graph-health": {
      "primary_model": "ollama/qwen2.5:14b-instruct",
      "fallback_model": "google/gemini-2.5-pro",
      "max_tokens": 28000,
      "timeout_sec": 240,
      "retries": 2,
      "retry_backoff_sec": [5, 20],
      "tool_policy": {
        "allow_shell": false,
        "allowed_tools": [
          "integration.system_health",
          "integration.openclaw_health",
          "memory.*"
        ]
      },
      "output_contract": ["status", "graph_kpis", "anomalies", "next_actions"]
    },
    "infra-health": {
      "primary_model": "google/gemini-2.5-pro",
      "fallback_model": "ollama/qwen2.5:14b-instruct",
      "max_tokens": 22000,
      "timeout_sec": 180,
      "retries": 2,
      "retry_backoff_sec": [5, 15],
      "tool_policy": {
        "allow_shell": false,
        "allowed_tools": [
          "integration.system_health",
          "integration.openclaw_health",
          "memory.*"
        ]
      },
      "output_contract": [
        "overall_status",
        "service_breakdown",
        "latency_ms",
        "incidents",
        "next_actions"
      ]
    },
    "orchestrator-sync": {
      "primary_model": "ollama/qwen2.5:14b-instruct",
      "fallback_model": "google/gemini-2.5-pro",
      "max_tokens": 24000,
      "timeout_sec": 210,
      "retries": 1,
      "retry_backoff_sec": [10],
      "tool_policy": {
        "allow_shell": false,
        "allowed_tools": ["agent.task.*", "supervisor.*", "memory.*"]
      },
      "output_contract": ["plan", "assignments", "blocked_items", "verification"]
    },
    "security-cve-scan": {
      "primary_model": "google/gemini-2.5-pro",
      "fallback_model": "ollama/qwen2.5:14b-instruct",
      "max_tokens": 42000,
      "timeout_sec": 420,
      "retries": 2,
      "retry_backoff_sec": [15, 45],
      "tool_policy": {
        "allow_shell": false,
        "allowed_tools": ["github.*", "memory.*"]
      },
      "output_contract": [
        "critical_findings",
        "cvss_summary",
        "affected_components",
        "remediation_plan"
      ]
    },
    "github-cicd": {
      "primary_model": "ollama/qwen2.5:14b-instruct",
      "fallback_model": "google/gemini-2.5-pro",
      "max_tokens": 26000,
      "timeout_sec": 240,
      "retries": 3,
      "retry_backoff_sec": [10, 30, 90],
      "tool_policy": {
        "allow_shell": false,
        "allowed_tools": ["github.*", "agent.task.*", "memory.*"]
      },
      "output_contract": [
        "repo_status",
        "failed_checks",
        "required_actions",
        "run_receipt"
      ]
    },
    "harvester-freshness": {
      "primary_model": "ollama/qwen2.5:14b-instruct",
      "fallback_model": "google/gemini-2.5-pro",
      "max_tokens": 38000,
      "timeout_sec": 360,
      "retries": 2,
      "retry_backoff_sec": [10, 30],
      "tool_policy": {
        "allow_shell": false,
        "allowed_tools": ["memory.*", "integration.system_health"]
      },
      "output_contract": [
        "freshness_index",
        "stale_sources_top10",
        "harvest_delta",
        "next_actions"
      ]
    },
    "strategist-daily": {
      "primary_model": "ollama/qwen2.5:14b-instruct",
      "fallback_model": "google/gemini-2.5-pro",
      "max_tokens": 20000,
      "timeout_sec": 180,
      "retries": 1,
      "retry_backoff_sec": [15],
      "tool_policy": {
        "allow_shell": false,
        "allowed_tools": ["memory.*", "integration.system_health"]
      },
      "output_contract": [
        "top_3_decisions",
        "top_3_risks",
        "top_3_next_steps",
        "owners_deadlines"
      ]
    }
  },
  "global_guardrails": {
    "forbidden_shell_commands": [
      "python",
      "widgetdc_mcp",
      "/health",
      "/cicd",
      "jq",
      "graph"
    ],
    "announce": {
      "channel_required": true,
      "on_channel_not_found": "disable_announce_and_mark_warning"
    },
    "rate_limit_policy": {
      "max_concurrent_cron_runs": 2,
      "queue_overflow_strategy": "defer_noncritical"
    },
    "success_criteria": {
      "require_output_contract": true,
      "require_run_receipt": true
    }
  }
}
